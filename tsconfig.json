{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vue",
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "dev/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
