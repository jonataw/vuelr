{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.spec.ts"
  ],
  "exclude": [
    "dist",
    "scripts"
  ]
}
